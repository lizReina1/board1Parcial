
<div class="container p-4">

    <section>
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h1 class="display-5 fw-bolder mb-0"><span
                    class="text-gradient d-inline">Salas Creadas</span></h1>

            <!-- Download resume button-->
            <!-- Note: Set the link href target to a PDF file within your project-->
            <a class="btn btn-primary px-4 py-3" href="/salas/add">
                <div class="d-inline-block bi bi-plus me-2"></div>
                Crear Sala
            </a>
        </div>
        <!-- Experience Card 1-->
        <div class="card shadow border-0 rounded-4 mb-5">
            <div class="card-body p-5">
                <div class="row align-items-center gx-5">
                    {{#each salas}}
                    <div class="col-lg-4 col-md-6 col-12 mb-4">
                        <div class="card h-180">
                            <div
                                class="card-body d-flex flex-column align-items-center">
                                <div class="row">
                                    <div class="col">
                                        <img class="salaPortada"
                                            src="assets/imgSala.svg"
                                            alt="..." />
                                    </div>
                                    <div class="col-6">
                                        <a href="/salas/inSala/{{tokenS}}"
                                            target="_blank">
                                            <h5
                                                class="card-title text-uppercase">{{title}}</h5>
                                        </a>
                                        <div
                                            class="d-flex justify-content-center align-items-center flex-grow-1">
                                           
                                            <p
                                                class="card-text text-muted mt-auto">Tiempo:
                                                {{timeago created_at}}</p>
                                        </div>
                                    </div>
                                    <div class="col ">
                                        <div class="row">
                                            <a
                                                class="btn btn-info rounded-circle"
                                                style="width: 40px; height: 40px; text-align: center;"
                                                href="/salas/listUsuarios/{{id}}">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="16" height="16"
                                                    fill="currentColor"
                                                    class="bi bi-share-fill"
                                                    viewBox="0 0 16 16">
                                                    <path
                                                        d="M11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.5 2.5 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5" />
                                                </svg>
                                            </a>
                                        </div>
                                        <div class="row">
                                            <a
                                                class="btn btn-info rounded-circle"
                                                style="width: 40px; height: 40px; text-align: center;"
                                                href="/salas/edit/{{id}}">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="16" height="16"
                                                    fill="currentColor"
                                                    class="bi bi-pencil-fill"
                                                    viewBox="0 0 16 16">
                                                    <path
                                                        d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                                                </svg>
                                            </a>
                                        </div>
                                        <div class="row">
                                            <a
                                                class="btn btn-info rounded-circle"
                                                style="width: 40px; height: 40px; text-align: center;"
                                                href="/salas/delete/{{id}}">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="16" height="16"
                                                    fill="currentColor"
                                                    class="bi bi-trash3-fill"
                                                    viewBox="0 0 16 16">
                                                    <path
                                                        d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                                                </svg>
                                            </a>
                                        </div>
                                        <div class="row">
                                            <a
                                                class="btn btn-info rounded-circle"
                                                style="width: 40px; height: 40px; text-align: center;"
                                                href="/salas/exportar/{{id}}">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="16" height="16"
                                                    fill="currentColor"
                                                    class="bi bi-box-arrow-up-right"
                                                    viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd"
                                                        d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5" />
                                                    <path fill-rule="evenodd"
                                                        d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0z" />
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">
                                 <p
                                                class="card-text">{{description}}</p>
                            </div>

                        </div>
                    </div>
                    {{else}}
                    <div class="col-lg-8">
                        <div class="card card-body text-center">
                            <p>No hay ninguna sala que sea creado por ti</p>
                            <a href="/salas/add">Crea Uno!</a>
                        </div>
                    </div>
                    {{/each}}

                </div>
            </div>
            <!-- Experience Card 2-->

        </section>

