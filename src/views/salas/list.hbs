<div class="container p-4">
    <h1 class="row">Salas Que haz Creado: </h1>

    <div class="row" style="margin-top: 1.6cm;">
        {{#each salas}}
        <div class="col-lg-4 col-md-6 col-12 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column align-items-center">
                    <a href="/salas/inSala/{{tokenS}}" target="_blank">
                        <h5 class="card-title text-uppercase">{{title}}</h5>
                    </a>
                    <div class="d-flex justify-content-center align-items-center flex-grow-1">
                        <p class="card-text">{{description}}</p>
                        <p class="card-text text-muted mt-auto">Tiempo: {{timeago created_at}}</p>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a class="btn btn-primary" href="/salas/listUsuarios/{{id}}">
                                Compartir
                            </a>
                        </div>
                        <div>
                            <a class="btn btn-secondary" href="/salas/edit/{{id}}">
                                Editar
                            </a>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <div>
                            <a class="btn btn-danger" href="/salas/delete/{{id}}">
                                Borrar
                            </a>
                        </div>
                        <div>
                            <a class="btn btn-danger" href="/salas/exportar/{{id}}">
                                Exportar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay ninguna sala que sea creado por ti</p>
                <a href="/salas/add">Crea Uno!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
