<div class="background-container">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bolder mb-0"><span
                class="text-gradient d-inline">Compartir</span></h1>
        <div class="text-center">
            <h5> Selecciona a las Personas para la Sala o comparte el link</h5>
        </div>
    </div>

    <div class="container p-4">

        <div class="row align-items-center">
            <div class="col-md-6 mx-auto">

                <div class="card " style="max-width: 35rem;">
                    <div class="card-header bg-info  text-center">
                        <h4>Compartir con Amigos</h4>
                        
                    </div>

                    <div class="card-body ">

                        <form action="/salas/compartir/{{idSala}}"
                            method="POST">
                            <div class="form-group">
                                <select name="idUsuario" id="select-users"
                                    class="form-control" onchange="habilitar()">
                                    <option value="nulo">Seleccione un
                                        Usuario</option>
                                    {{#each users}}
                                    <option value="{{id}}">{{username}},
                                        {{correo}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group text-center">
                                <button
                                    class="btn btn-info ">Compartir</button>
                                  <a class="btn btn-danger"
                            href="/profile">Cancelar</a>  
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
