<style>
    .background-container {
        background-image: url('https://opem.b-cdn.net/wp-content/uploads/2023/05/ventajas-del-trabajo-en-equipo-768x397.jpg.webp');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh; /* Altura 100% de la pantalla */
    }
</style>

<div class="background-container">
    <div class="text-center">
        <h1 class="border p-1 bg-info">Sector para Seleccionar <br> Personas para la Sala</h1>
    </div>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4>Compartir con Amigos</h4>
                    </div>
                    <div class="card-body">
                        <form action="/salas/compartir/{{idSala}}" method="POST">
                            <div class="form-group">
                                <select name="idUsuario" id="select-users" class="form-control" onchange="habilitar()">
                                    <option value="nulo">Seleccione un Usuario</option>
                                    {{#each users}}
                                    <option value="{{id}}">{{username}}, {{correo}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">Compartir</button>
                            </div>
                            <li class="nav-item">
                                <a class="btn btn-secondary btn-sm" href="/profile">Atras</a>
                            </li>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
