<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body" style="background-color: #f0f8ff;">

                    <form action="/salas/edit/{{sala.id}}" method="POST">
                        <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Title" value="{{sala.title}}"
                                                autofocus>
                         </div>
                        <div class="form-group">
                            <input type="xml" name="xml" class="form-control" placeholder="URL" value="{{sala.xml}}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Description">{{sala.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" style="background-color: #2e8b57; border: none;">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
